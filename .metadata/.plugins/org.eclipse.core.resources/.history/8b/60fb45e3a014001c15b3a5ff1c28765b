package testes;


import java.util.ArrayList;

import static org.junit.Assert.*;

import org.junit.Test;
public class Teste {

	private static final byte TIPO_MEDIA_ARITMETICA = 0;
	//Boletim media = new Boletim();
	

	
	 public static void main(String[] args) {
		Boletim media = new Boletim();
		media.setTipoMedia(TIPO_MEDIA_ARITMETICA);
		ArrayList<Float> notas = new ArrayList<>();
		float[] nota = {8,6};
		int[] peso = {1,1};
		
		System.out.println(media.calculaMedia(nota, peso));
		
		assertEquals(7.0f, media.calculaMedia(nota, peso));
	 }
}
